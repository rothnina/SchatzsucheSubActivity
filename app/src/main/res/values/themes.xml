<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SchatzsucheSubActivity" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">
            @color/white
        </item>
        <item name="colorPrimary">
            @color/primaryColor
        </item>
        <item name="colorPrimaryDark">
            @color/primaryColorDark
        </item>
        <item name="colorSecondary">
            @color/secondColor
        </item>
        <item name="android:buttonStyle">
            @style/btn
        </item>
        <item name="materialThemeOverlay">
            @style/toolBar
        </item>
        <item name="appBarLayoutStyle">
            @style/toolBar
        </item>
    </style>
    <style name="toolBar">
        <item name="android:background">
            @color/waterBlue
        </item>
    </style>
    <style name="btn" parent="android:Widget.Button">
        <item name="android:textSize">
            300sp
        </item>
        <item name="android:background">
            @color/waterBlue
        </item>
    </style>
    <style name="Theme.SchatzsucheSubActivity" parent="Base.Theme.SchatzsucheSubActivity" />
</resources>